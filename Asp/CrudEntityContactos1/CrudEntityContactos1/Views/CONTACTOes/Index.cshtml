@model IEnumerable<CrudEntityContactos1.Models.CONTACTO>

@{
    ViewBag.Title = "Lista de contactos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-lg-12">
        <div class="panel panel-info" style="margin-top: 30px;">
            <div class="panel-heading">
                <h4>Lista de Contactos</h4>
            </div>
            <div class="panel-body">
                <a class="btn btn-success" href="@Url.Action("Create","CONTACTOes")">
                    Crear Contacto
                </a>
                <br />
                <table class="table table-responsive table-striped" style="margin-top: 10px;">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombres)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Apellidos)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Telefono)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Correo)
                        </th>
                        <th>Acciones</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombres)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Apellidos)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Telefono)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Correo)
                            </td>
                            <td>
                                <a class="btn btn-warning btn-sm" href="@Url.Action("Edit","CONTACTOes", new { id = item.IdContacto })">
                                    Editar
                                </a>
                                <a class="btn btn-info btn-sm" href="@Url.Action("Details","CONTACTOes", new { id = item.IdContacto })">
                                    Ver
                                </a>
                                <a class="btn btn-danger btn-sm" href="@Url.Action("Delete","CONTACTOes", new { id = item.IdContacto })">
                                    Eliminar
                                </a>
                                
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>




@model IEnumerable<MvcProductos.Models.Producto>

@{
    ViewBag.Title = "Inicio";
}

<h2>Lista de productos</h2>

<p>
    @Html.ActionLink("Agregar producto", "Create")
    @using (Html.BeginForm("Index", "Productos", FormMethod.Get))
    {
<p>
    <!--generoPelicula es el viewbag declarado en el controller-->
    Descripción: @Html.TextBox("BuscarDescripcion")
    Existencia: @Html.TextBox("BuscarExistencia")
    Precio Venta: @Html.TextBox("BuscarPventa")
    <input type="submit" value="Filtrar" />
</p>
    }
</p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Costo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Existencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumPedidos)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdProducto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.Costo)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.PrecioVenta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Existencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumPedidos)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
